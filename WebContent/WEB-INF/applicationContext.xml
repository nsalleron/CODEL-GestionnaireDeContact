	</bean>

	<bean id="beanContactGroupDAO" class="daos.ContactGroupDAO" scope="singleton">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="beanEntrepriseDAO" class="daos.EntrepriseDAO" scope="singleton">
